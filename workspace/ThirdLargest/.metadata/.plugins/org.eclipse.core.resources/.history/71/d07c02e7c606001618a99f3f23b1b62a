package RemoveDuplicates;

import java.io.*;


public class RemoveDuplicates {
	


	public static void main(String[] args) throws IOException {
		 
		
		        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));//captures user input
		        System.out.print("Enter any word : ");
		        String sample = br.readLine();
		        int l = sample.length();
		        char text;
		        String ans=""; //holds the answer
		        
		        for(int i=0; i<l; i++)
		        {
		            text = sample.charAt(i);
		            if(text!=' ')
		                ans = ans + text;
		            sample = sample.replace(text,' '); //Replacing all occurrence of the current character by a space
		        }
		 
		       System.out.println("Word Is : " + ans);
		    }
		

	}


